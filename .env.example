# ── Postgres ──────────────────────────────────────────────────────────────────
POSTGRES_USER=hairstyle
POSTGRES_PASSWORD=hairstyle_secret
POSTGRES_DB=hairstyle_db
DATABASE_URL=postgresql+asyncpg://hairstyle:hairstyle_secret@postgres:5432/hairstyle_db
DATABASE_SYNC_URL=postgresql://hairstyle:hairstyle_secret@postgres:5432/hairstyle_db

# ── MinIO (upload storage) ────────────────────────────────────────────────────
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_UPLOADS=hairstyle-uploads
MINIO_BUCKET_RESULTS=hairstyle-results

# ── LocalStack (SQS + secondary S3) ──────────────────────────────────────────
LOCALSTACK_ENDPOINT=http://localstack:4566
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_DEFAULT_REGION=us-east-1
SQS_QUEUE_URL=http://localstack:4566/000000000000/hairstyle-jobs
SQS_QUEUE_NAME=hairstyle-jobs

# ── Worker ────────────────────────────────────────────────────────────────────
DECA_ENABLED=false
RENDERER_BACKEND=trimesh
DECA_WEIGHTS_S3_BUCKET=hairstyle-model-cache
DECA_WEIGHTS_S3_KEY=deca/deca_model.tar

# ── API ───────────────────────────────────────────────────────────────────────
API_HOST=0.0.0.0
API_PORT=8000
PRESIGNED_URL_EXPIRY_SECONDS=900
CORS_ORIGINS=["http://localhost:3000","http://10.0.2.2:8000"]

# ── Flutter (debug) ───────────────────────────────────────────────────────────
API_BASE_URL=http://10.0.2.2:8000
MINIO_PUBLIC_URL=http://10.0.2.2:9000
